---
import "@/styles/global.css"
import { VouchersLanding } from "@/components/vouchers-landing"
import GradualBlur from '@/components/GradualBlur'
import { ArrowLeft } from "lucide-react"
import { buttonVariants } from "@/components/ui/button"
import { cn } from "@/lib/utils"
---

<html lang="ru" class="dark scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<title>Магазин Ваучеров — Kitsura</title>
		<meta
			name="description"
			content="Покупка подарочных карт Steam, Spotify, iTunes, Valorant и других сервисов. Моментальная доставка."
		/>
		<link rel="icon" type="image/png" href="/favicon.png" />
	</head>
	<body class="bg-background text-foreground min-h-screen flex flex-col overflow-x-hidden selection:bg-purple-500/30">
        
        <header class="fixed top-0 left-0 right-0 z-50 backdrop-blur-md bg-background/5 border-b border-white/5">
			<div class="container mx-auto flex items-center justify-between px-4 py-4 sm:px-6 lg:px-8">
				<a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
					<img src="/favicon.png" alt="Kitsura Logo" class="size-8 grayscale invert brightness-125" />
					<span class="font-semibold text-lg tracking-tight">Kitsura</span>
				</a>
                <div class="flex items-center gap-2">
                    <a href="/steam" class={cn(buttonVariants({ variant: "ghost", size: "sm" }), "rounded-full border-primary/20 hover:bg-primary/10 hover:text-primary transition-colors")}>
						Пополнение Steam
					</a>
                    <a href="/" class={cn(buttonVariants({ variant: "ghost", size: "sm" }), "rounded-full border-primary/20 hover:bg-primary/10 hover:text-primary transition-colors")}>
                        <ArrowLeft className="size-4" />
                        Назад
                    </a>
                </div>
			</div>
		</header>

		<main class="relative overflow-hidden">
            <VouchersLanding client:load />
		</main>

        <GradualBlur
			target="page"
			divCount={10}
			exponential={true}
			opacity={1}
			preset="bottom"
		/>
	</body>
</html>
